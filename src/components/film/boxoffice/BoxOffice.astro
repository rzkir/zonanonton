---
import FilmCard from "@/components/ui/FilmCard.astro";

export interface Props {
  boxofficeList: FilmBoxOfficeItem[];
}

const { boxofficeList = [] } = Astro.props;
---

{
  boxofficeList?.length > 0 && (
    <section class="flex flex-col gap-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold flex items-center gap-3 text-white">
          <span class="w-1.5 h-8 bg-amber-500 rounded-full" />
          Box Office
        </h2>
      </div>
      <div class="flex gap-6 py-4 overflow-x-auto hide-scrollbar">
        {boxofficeList.map((item: FilmBoxOfficeItem) => (
          <FilmCard
            item={item}
            variant="amber"
            showBadges={true}
            scorePosition="bottom-right"
            subtitle="episode"
          />
        ))}
      </div>
    </section>
  )
}
