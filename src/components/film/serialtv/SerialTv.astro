---
export interface Props {
  serialtvList: FilmSerialTvItem[];
}

const { serialtvList = [] } = Astro.props;
---

{
  serialtvList?.length > 0 && (
    <section class="flex flex-col gap-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold flex items-center gap-3 text-white">
          <span class="w-1.5 h-8 bg-emerald-500 rounded-full" />
          Serial TV
        </h2>
      </div>
      <div class="flex gap-6 py-4 overflow-x-auto hide-scrollbar">
        {serialtvList.map((item: FilmSerialTvItem) => (
          <a
            href={`/film/${item.aquaaquariaId}`}
            class="flex-none w-[160px] sm:w-[180px] group cursor-pointer"
          >
            <div class="relative aspect-2/3 rounded-xl overflow-hidden mb-3 border border-white/5 transition-all duration-300 group-hover:border-emerald-500/40">
              <img
                src={item.poster}
                alt={item.title}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                loading="lazy"
              />
              {item.score && (
                <div class="absolute bottom-2 right-2 flex items-center gap-1 rounded bg-black/60 px-2 py-1 text-xs text-emerald-400">
                  <span>â˜…</span>
                  {item.score}
                </div>
              )}
              {item.episode && (
                <div class="absolute top-2 right-2 rounded bg-black/60 px-2 py-1 text-[10px] text-white">
                  Ep {item.episode}
                </div>
              )}
            </div>
            <h3 class="font-semibold text-sm text-white line-clamp-2 group-hover:text-emerald-300 transition-colors">
              {item.title}
            </h3>
          </a>
        ))}
      </div>
    </section>
  )
}
