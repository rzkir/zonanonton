---
import MangaCard from "../../ui/MangaCard.astro";

export interface Props {
  mangaList: (MangaPopularItem | MangaPopularItemWithViews)[];
}

const { mangaList } = Astro.props;
const list = mangaList ?? [];
---

{
  list.length > 0 && (
    <section class="flex flex-col gap-4 space-y-32">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold flex items-center gap-3 text-white">
          <span class="w-1.5 h-8 bg-amber-500 rounded-full" />
          Manhua Populer
        </h2>
        <a
          href="/manga"
          class="text-gray-400 hover:text-cyan-400 text-sm font-medium transition-colors"
        >
          Lihat Semua
        </a>
      </div>
      <div class="flex gap-6 py-4 overflow-x-auto hide-scrollbar">
        {list.map((item: MangaPopularItem | MangaPopularItemWithViews) => (
          <MangaCard item={item} accentColor="amber" />
        ))}
      </div>
    </section>
  )
}
