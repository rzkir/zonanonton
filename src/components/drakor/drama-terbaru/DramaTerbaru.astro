---
import DrakorCard from "@/components/ui/DrakorCard.astro";

export interface Props {
  animeList?: DrakorAnimeItem[];
}

const { animeList = [] } = Astro.props;
---

{
  animeList?.length > 0 && (
    <section class="flex flex-col gap-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl font-bold flex items-center gap-3 text-white">
          <span class="w-1.5 h-8 bg-amber-500 rounded-full" />
          Drama Terbaru
        </h2>
        <a
          href="/drakor/terbaru"
          class="text-gray-400 hover:text-amber-400 text-sm font-medium transition-colors"
        >
          Lihat Semua
        </a>
      </div>

      <div class="flex gap-6 py-4 overflow-x-auto hide-scrollbar">
        {animeList.map((item: DrakorAnimeItem) => (
          <DrakorCard item={item} variant="amber" badgeMode="country-genre" />
        ))}
      </div>
    </section>
  )
}
