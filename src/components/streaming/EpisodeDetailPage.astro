import type {
  ServerItem,
  QualityServer,
  DownloadQuality,
  DownloadLink,
} from "@/lib/FetchAnime";

function getServerId(s: ServerItem): string {
  return s.serverId;
}

const {
  episodeId,
  initialData,
  apiBase = "",
  apiSecret = "",
  recommendedAnimeList = [],
} = Astro.props;
const episode = initialData ?? null;

// Episode navigation helpers (prev/next from episode list)
const episodeList: EpisodeItem[] = (episode?.info?.episodeList ??
  []) as EpisodeItem[];
const currentEpisodeIndex = episodeList.findIndex(
  (e) => e.episodeId === episodeId,
);
const prevEpisode =
  currentEpisodeIndex > 0 ? episodeList[currentEpisodeIndex - 1] : null;
const nextEpisodeFromList =
  currentEpisodeIndex >= 0 && currentEpisodeIndex < episodeList.length - 1
    ? episodeList[currentEpisodeIndex + 1]
    : null;

// Extract episode number from title
function getEpisodeNumber(title: string | number): string {
  if (typeof title === "number") return String(title);
  const match = title.match(/\d+/);
  return match ? match[0] : String(title);
}

// Normalize server name: satukan nama yang sama walau beda resolusi (e.g. "Mirror 1 - 360p" -> "Mirror 1")
function normalizeServerName(title: string): string {
  return (
    title
      .replace(/\s*[-–—]\s*(360p|480p|720p|1080p|\d+p)\s*$/i, "")
      .replace(/\s*\(\s*(360p|480p|720p|1080p|\d+p)\s*\)\s*$/i, "")
      .trim() || title
  );
}

// Build two-select data: unique server names (digabung jika nama sama), lookup (serverName + quality -> stream info)
function buildServerQualitySelect(qualities: QualityServer[]) {
  const lookup: Array<{
    serverName: string;
    quality: string;
    serverId: string;
    isDirect: boolean;
  }> = [];
  const serverNameSet = new Set<string>();
  const qualitySet = new Set<string>();

  qualities.forEach((q) => {
    qualitySet.add(q.title);
    q.serverList.forEach((s) => {
      const normalizedName = normalizeServerName(s.title);
      serverNameSet.add(normalizedName);
      lookup.push({
        serverName: normalizedName,
        quality: q.title,
        serverId: getServerId(s),
        isDirect: false,
      });
    });
  });

  const serverNames = Array.from(serverNameSet);
  const qualityList = Array.from(qualitySet).sort((a, b) => {
    const numA = parseInt(a.replace(/\D/g, ""), 10) || 0;
    const numB = parseInt(b.replace(/\D/g, ""), 10) || 0;
    return numA - numB;
  });

  return { serverNames, qualityList, lookup };
}

const serverQualityData =
  episode?.server?.qualities?.length > 0
    ? buildServerQualitySelect(episode.server.qualities)
    : null;
