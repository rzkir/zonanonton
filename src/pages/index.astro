---
import "@/styles/global.css";

import Header from "@/components/layout/Header.astro";

import Footer from "@/components/layout/Footer.astro";

import HomePage from "@/components/streaming/HomePage.astro";

import { fetchHomeData, fetchSchedule } from "@/lib/FetchAnime";

import { fetchMangaHomeData } from "@/lib/FetchManga";

const apiBase = import.meta.env.API_BASE ?? import.meta.env.PUBLIC_API_BASE;

const apiSecret =
  import.meta.env.API_SECRET ?? import.meta.env.PUBLIC_API_SECRET;

const initialHomeData = await fetchHomeData({ apiBase, apiSecret });

const scheduleData = await fetchSchedule({ apiBase, apiSecret });

const initialMangaHomeData = await fetchMangaHomeData({ apiBase, apiSecret });
---

<html lang="id" class="streaming-app dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Zona Nonton | Anime, Manga & More</title>
    <meta
      name="description"
      content="The ultimate destination for anime, manga, and Asian cinema. Experience streaming in a whole new light with Nebula."
    />
  </head>

  <body
    class="min-h-screen bg-[#0a0b14] text-white antialiased selection:bg-cyan-500/30 overflow-x-hidden"
  >
    <Header />
    <HomePage
      initialData={initialHomeData}
      scheduleData={scheduleData}
      initialMangaHomeData={initialMangaHomeData}
    />
    <Footer />
  </body>
</html>
