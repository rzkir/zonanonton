---
import "@/styles/global.css";

import Header from "@/components/layout/Header.astro";

const mangaCards = [
  {
    title: "The Shadow Realm Chronicles",
    author: "Kenji Mitsuru",
    image:
      "https://images.unsplash.com/photo-1541562232579-512a21360020?auto=format&fit=crop&q=80&w=600",
    status: "Ongoing" as const,
    statusClass: "bg-cyan-500",
    rating: 4.8,
    stars: 4.5,
  },
  {
    title: "Neon Ghost of Tokyo",
    author: "Yuna Sato",
    image:
      "https://images.unsplash.com/photo-1620336655055-088d06e76fc0?auto=format&fit=crop&q=80&w=600",
    status: "Completed" as const,
    statusClass: "bg-purple-600",
    rating: 5.0,
    stars: 5,
  },
  {
    title: "Blade Dancer",
    author: "Takahashi Oro",
    image:
      "https://images.unsplash.com/photo-1618336753974-aae8e04506aa?auto=format&fit=crop&q=80&w=600",
    status: "Ongoing" as const,
    statusClass: "bg-cyan-500",
    rating: 4.2,
    stars: 4,
  },
  {
    title: "Cyber Core: Link",
    author: "Ito Hideo",
    image:
      "https://images.unsplash.com/photo-1578632292335-df3abbb0d586?auto=format&fit=crop&q=80&w=600",
    status: "Upcoming" as const,
    statusClass: "bg-gray-600",
    rating: 4.9,
    stars: 5,
  },
  {
    title: "Ancient Omen",
    author: "Rin Okumura",
    image:
      "https://images.unsplash.com/photo-1634733988138-bf2c3a2a13fa?auto=format&fit=crop&q=80&w=600",
    status: "Ongoing" as const,
    statusClass: "bg-cyan-500",
    rating: 3.5,
    stars: 3.5,
  },
  {
    title: "Soul Weaver: Rebirth",
    author: "Zane Wilder",
    image:
      "https://images.unsplash.com/photo-1607604276583-eef5d076aa5f?auto=format&fit=crop&q=80&w=600",
    status: "Ongoing" as const,
    statusClass: "bg-cyan-500",
    rating: 4.7,
    stars: 5,
  },
  {
    title: "Crimson Crest",
    author: "Hideo K.",
    image:
      "https://images.unsplash.com/photo-1542332213-9b5a5a3fab35?auto=format&fit=crop&q=80&w=600",
    status: "Completed" as const,
    statusClass: "bg-purple-600",
    rating: 4.9,
    stars: 5,
  },
  {
    title: "Valley of Wind",
    author: "Mikael Oro",
    image:
      "https://images.unsplash.com/photo-1518709268805-4e9042af9f23?auto=format&fit=crop&q=80&w=600",
    status: "Ongoing" as const,
    statusClass: "bg-cyan-500",
    rating: 4.0,
    stars: 4,
  },
];

const genres = ["Action", "Comedy", "Drama", "Fantasy", "Mystery"];
const statuses = ["All Status", "Ongoing", "Completed", "Upcoming"];
---

<html lang="en" class="streaming-app dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Nebula | Manga Library</title>
    <meta
      name="description"
      content="Discover original manga works in the Nebula Manga Library."
    />
    <link rel="preconnect" href="https://api.fontshare.com" />
  </head>

  <body class="min-h-screen bg-[#0a0b14] text-white antialiased">
    <div class="min-h-screen flex flex-col">
      <Header />

      <div class="flex flex-1 pt-20">
        <!-- Sidebar Filter -->
        <aside
          class="w-72 hidden lg:block border-r border-white/5 p-8 overflow-y-auto sticky top-20 h-[calc(100vh-80px)] shrink-0"
          style="scrollbar-width: thin; scrollbar-color: #2d344d var(--bg-deep);"
        >
          <style is:global>
            .manga-sidebar::-webkit-scrollbar {
              width: 4px;
            }
            .manga-sidebar::-webkit-scrollbar-track {
              background: var(--bg-deep);
            }
            .manga-sidebar::-webkit-scrollbar-thumb {
              background: #2d344d;
              border-radius: 10px;
            }
            .manga-sidebar::-webkit-scrollbar-thumb:hover {
              background: var(--accent-cyan);
            }
          </style>
          <div class="manga-sidebar h-full">
            <h2
              class="text-lg font-bold mb-8 uppercase tracking-widest text-gray-500"
            >
              Filters
            </h2>

            <div class="space-y-10">
              <div>
                <label class="text-sm font-bold text-gray-300 block mb-3"
                  >Author</label
                >
                <div class="relative">
                  <input
                    type="text"
                    placeholder="Search creator..."
                    class="w-full bg-white/5 border border-white/10 rounded-lg py-2.5 px-4 text-sm focus:outline-none focus:border-cyan-400 text-white placeholder-gray-500"
                  />
                </div>
              </div>

              <div>
                <label class="text-sm font-bold text-gray-300 block mb-3"
                  >Genres</label
                >
                <div class="space-y-2">
                  <button
                    type="button"
                    class="w-full flex items-center justify-between bg-white/5 px-4 py-2.5 rounded-lg border border-white/10 hover:border-white/20 transition-all text-sm text-left text-white"
                  >
                    <span>Select Genre</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      class="text-gray-400 shrink-0"
                    >
                      <path d="m6 9 6 6 6-6"></path>
                    </svg>
                  </button>
                  <div class="grid grid-cols-1 gap-2 mt-4">
                    {
                      genres.map((genre) => (
                        <label class="flex items-center gap-3 text-sm text-gray-400 hover:text-white cursor-pointer group">
                          <input
                            type="checkbox"
                            class="w-4 h-4 rounded border-white/10 bg-white/5 text-cyan-500 focus:ring-cyan-500/20"
                          />
                          <span>{genre}</span>
                        </label>
                      ))
                    }
                  </div>
                </div>
              </div>

              <div>
                <label class="text-sm font-bold text-gray-300 block mb-3"
                  >Status</label
                >
                <div class="space-y-3">
                  {
                    statuses.map((status) => (
                      <label class="flex items-center gap-3 cursor-pointer group">
                        <input
                          type="radio"
                          name="status"
                          value={status}
                          class="w-4 h-4 border-white/10 bg-white/5 text-cyan-400 focus:ring-0"
                        />
                        <span class="text-sm text-gray-400 group-hover:text-white">
                          {status}
                        </span>
                      </label>
                    ))
                  }
                </div>
              </div>

              <button
                type="button"
                class="w-full bg-linear-to-r from-cyan-500/10 to-purple-500/10 hover:from-cyan-500 hover:to-purple-500 border border-cyan-500/30 text-white font-bold py-3 rounded-xl transition-all duration-300 text-sm tracking-widest uppercase"
              >
                Reset Filters
              </button>
            </div>
          </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-8">
          <div
            class="flex flex-col md:flex-row md:items-end justify-between mb-10 gap-6"
          >
            <div>
              <div
                class="flex items-center gap-2 text-cyan-400 text-xs font-bold tracking-[0.2em] uppercase mb-2"
              >
                <span class="w-2 h-2 bg-cyan-400 rounded-full animate-pulse"
                ></span>
                Discover Original Works
              </div>
              <h1 class="text-4xl md:text-5xl font-black">Manga Library</h1>
            </div>

            <div class="flex items-center gap-4">
              <span class="text-xs font-bold text-gray-500 uppercase"
                >Sort By:</span
              >
              <div class="relative">
                <select
                  class="appearance-none bg-white/5 border border-white/10 rounded-lg px-6 py-2.5 pr-12 text-sm focus:outline-none focus:border-purple-400 cursor-pointer text-white"
                  aria-label="Sort manga"
                >
                  <option>Most Popular</option>
                  <option>Latest Release</option>
                  <option>Highest Rated</option>
                  <option>A-Z Alphabetical</option>
                </select>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-gray-400"
                >
                  <path d="m6 9 6 6 6-6"></path>
                </svg>
              </div>
            </div>
          </div>

          <div
            class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-6 gap-6"
          >
            {
              mangaCards.map((manga) => (
                <a href="#" class="group cursor-pointer block">
                  <div class="relative aspect-2/3 rounded-2xl overflow-hidden bg-white/5 mb-4 shadow-xl">
                    <img
                      src={manga.image}
                      alt={manga.title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                      loading="lazy"
                    />
                    <div class="absolute top-3 left-3">
                      <span
                        class={`${manga.statusClass} text-white text-[10px] font-black uppercase px-2 py-1 rounded shadow-lg`}
                      >
                        {manga.status}
                      </span>
                    </div>
                    <div class="absolute inset-0 bg-linear-to-t from-black/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                      <span class="w-full bg-white text-black font-black py-2.5 rounded-lg text-xs tracking-wider uppercase transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 block text-center">
                        Read Now
                      </span>
                    </div>
                  </div>
                  <div>
                    <h3 class="font-bold text-base line-clamp-1 group-hover:text-cyan-400 transition-colors">
                      {manga.title}
                    </h3>
                    <p class="text-gray-500 text-xs mb-2">{manga.author}</p>
                    <div class="flex items-center gap-2">
                      <div
                        class="flex text-yellow-500 text-xs gap-0.5"
                        aria-hidden="true"
                      >
                        {[1, 2, 3, 4, 5].map((i) => {
                          const full = manga.stars >= i;
                          const half = manga.stars > i - 1 && manga.stars < i;
                          return (
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="14"
                              height="14"
                              viewBox="0 0 24 24"
                              fill={full ? "currentColor" : "none"}
                              stroke="currentColor"
                              stroke-width="1.5"
                              class={
                                full
                                  ? "text-yellow-500"
                                  : half
                                    ? "text-yellow-500"
                                    : "text-gray-600"
                              }
                            >
                              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                            </svg>
                          );
                        })}
                      </div>
                      <span class="text-[10px] text-gray-600 font-bold uppercase">
                        {manga.rating}
                      </span>
                    </div>
                  </div>
                </a>
              ))
            }
          </div>

          <div class="mt-16 flex justify-center">
            <button
              type="button"
              class="px-10 py-3 rounded-full border border-white/10 hover:border-cyan-400 hover:text-cyan-400 font-bold text-sm transition-all duration-300 flex items-center gap-2"
            >
              Load More Series
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 5v14M5 12l7 7 7-7"></path>
              </svg>
            </button>
          </div>
        </main>
      </div>

      <footer class="border-t border-white/5 py-10 px-8 text-center">
        <div class="flex flex-col items-center gap-4">
          <div
            class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              class="text-gray-400"
            >
              <path d="M12 2v4m0 12v4M2 12h4m12 0h4"></path>
              <circle cx="12" cy="12" r="4"></circle>
              <path
                d="m4.93 4.93 2.83 2.83m8.48 8.48 2.83 2.83M4.93 19.07l2.83-2.83m8.48-8.48 2.83-2.83"
              ></path>
            </svg>
          </div>
          <p class="text-gray-500 text-xs font-medium max-w-md">
            Â© 2024 NEBULA STREAMING. All rights reserved. Dive into the largest
            library of Manga and Anime with high fidelity experience.
          </p>
          <div class="flex gap-6 text-gray-600">
            <a
              href="#"
              class="hover:text-cyan-400 transition-colors"
              aria-label="Twitter"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </a>
            <a
              href="#"
              class="hover:text-purple-400 transition-colors"
              aria-label="Discord"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"
                ></path>
              </svg>
            </a>
            <a
              href="#"
              class="hover:text-pink-400 transition-colors"
              aria-label="Instagram"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                ></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
