---
import "@/styles/global.css";

import Header from "@/components/streaming/Header.astro";

import AnimeDetailPage from "@/components/streaming/AnimeDetailPage.astro";
import { fetchAnimeDetail } from "@/lib/FetchAnime";

export const prerender = false;

const { id } = Astro.params;
const animeId = id ?? "";
if (!animeId) return Astro.redirect("/");

const apiBase = import.meta.env.API_BASE ?? import.meta.env.PUBLIC_API_BASE;
const apiSecret =
  import.meta.env.API_SECRET ?? import.meta.env.PUBLIC_API_SECRET;
const initialAnime = await fetchAnimeDetail(animeId, { apiBase, apiSecret });
const title = initialAnime?.title ?? "Anime";
const description = initialAnime?.synopsis?.paragraphs?.[0] ?? title;
---

<html lang="id" class="streaming-app dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} – StreamHub</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    {
      initialAnime?.poster && (
        <meta property="og:image" content={initialAnime.poster} />
      )
    }
    <link rel="preconnect" href="https://otakudesu.best" />
  </head>

  <body class="bg-[#0a0a0f] text-zinc-100 antialiased">
    <Header />

    <main class="pt-16">
      <AnimeDetailPage animeId={animeId} initialData={initialAnime} />
    </main>

    <footer class="border-t border-white/[0.08] py-8">
      <div
        class="max-w-[1600px] mx-auto px-4 sm:px-6 flex flex-col sm:flex-row items-center justify-between gap-4"
      >
        <a href="/" class="flex items-center gap-2 text-white font-bold">
          <span
            class="w-8 h-8 rounded-lg bg-gradient-to-br from-rose-500 to-pink-600 flex items-center justify-center text-sm"
            >S</span
          >
          StreamHub
        </a>
        <p class="text-zinc-500 text-sm">© 2024 StreamHub. Anime Sub Indo.</p>
      </div>
    </footer>
  </body>
</html>
