---
import "@/styles/global.css";

import Header from "@/components/layout/Header.astro";

import EpisodeDetailPage from "@/components/streaming/EpisodeDetailPage.astro";
import { fetchEpisodeDetail } from "@/lib/FetchAnime";

export const prerender = false;

const { id } = Astro.params;
const episodeId = id ?? "";
if (!episodeId) return Astro.redirect("/");

const apiBase = import.meta.env.API_BASE ?? import.meta.env.PUBLIC_API_BASE;
const apiSecret =
  import.meta.env.API_SECRET ?? import.meta.env.PUBLIC_API_SECRET;
const initialEpisode = await fetchEpisodeDetail(episodeId, {
  apiBase,
  apiSecret,
});
const title = initialEpisode?.title ?? "Episode";
---

<html lang="id" class="streaming-app dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} – StreamHub</title>
    <meta name="description" content={title} />
    <link rel="preconnect" href="https://desustream.info" />
  </head>

  <body class="bg-[#0a0a0f] text-zinc-100 antialiased">
    <Header />

    <main class="pt-16">
      <EpisodeDetailPage
        episodeId={episodeId}
        initialData={initialEpisode}
        apiBase={apiBase}
        apiSecret={apiSecret}
      />
    </main>

    <footer class="border-t border-white/8 py-8 mt-12">
      <div
        class="max-w-[1200px] mx-auto px-4 sm:px-6 flex flex-col sm:flex-row items-center justify-between gap-4"
      >
        <a href="/" class="flex items-center gap-2 text-white font-bold">
          <span
            class="w-8 h-8 rounded-lg bg-linear-to-br from-rose-500 to-pink-600 flex items-center justify-center text-sm"
            >S</span
          >
          StreamHub
        </a>
        <p class="text-zinc-500 text-sm">© 2024 StreamHub. Anime Sub Indo.</p>
      </div>
    </footer>
  </body>
</html>
